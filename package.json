{
	"name": "my-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run build:fix-netlify",
		"build:fix-netlify": "mkdir -p .netlify/functions && cp .netlify/functions-internal/sveltekit-render.mjs .netlify/functions/ && cp .netlify/functions-internal/sveltekit-render.json .netlify/functions/ && echo '* /.netlify/functions/sveltekit-render 200' > build/_redirects",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"cron:update-analytics": "node src/lib/cron/update-analytics.js --update-analytics",
		"cron:init-achievements": "node src/lib/cron/update-analytics.js --init-achievements",
		"worker": "node src/lib/worker.js",
		"db:seed": "node prisma/seed-supabase.js",
		"deploy:db": "./deploy-db.sh",
		"deploy:netlify": "netlify deploy --prod --dir=build"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-netlify": "^5.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@vitest/browser": "^3.2.3",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"tailwindcss": "^3.4.10",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.56.0",
		"bcryptjs": "^3.0.2",
		"dotenv": "^17.2.1",
		"jsonwebtoken": "^9.0.2",
		"lightningcss": "^1.30.1",
		"playwright": "^1.55.0"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.28.1",
		"lightningcss-linux-x64-gnu": "^1.30.1"
	}
}
